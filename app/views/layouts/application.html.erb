<!DOCTYPE html>
<html>
  <head>
    <title>FFCC</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <% if logged_in? %>
      <%= link_to "Log Out", logout_path, method: "delete" %> |
      <%= link_to "Home", root_path %> |
      <%= link_to "Character Stats", user_characters_path(current_user) %> |
        <% if current_user.characters.empty? %>
        <%= link_to "New Character", new_user_character_path(current_user) %> |
        <%end%>
        <% if admin%>
        <%= link_to "Create Adventure", new_adventure_path %>
        <%end%>
      <%end%>
    </div>
    <%= yield %>
  </body>
</html>
